rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is Admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // 1. Admins can read/write ALL documents
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // 2. Users can manage their own User Profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 3. Existing Resource Rules (Users managing their own data)
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /budgets/{budget} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && (resource == null || request.resource.data.userId == request.auth.uid);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /subscriptions/{subscription} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && (resource == null || request.resource.data.userId == request.auth.uid);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /categories/{category} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && (resource == null || request.resource.data.userId == request.auth.uid);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /accounts/{account} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && (resource == null || request.resource.data.userId == request.auth.uid);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
