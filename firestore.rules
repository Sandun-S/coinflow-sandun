rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write only their own transactions
    match /transactions/{transactionId} {
      // Allow creation if authenticated and the userId matches their UID
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow read/update/delete if authenticated and the resource belongs to them
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /budgets/{budget} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && (resource == null || request.resource.data.userId == request.auth.uid);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /subscriptions/{subscription} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && (resource == null || request.resource.data.userId == request.auth.uid);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    match /categories/{category} {
      allow read: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && (resource == null || request.resource.data.userId == request.auth.uid);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
